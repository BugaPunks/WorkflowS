generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum RoleName {
  ADMIN
  DOCENTE
  ESTUDIANTE
}

enum ScrumRole {
  SCRUM_MASTER
  PRODUCT_OWNER
  TEAM_DEVELOPER
}

enum UserStoryStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  name      String?
  password  String
  role      RoleName    @default(ESTUDIANTE)
  projects  ProjectUser[]
  tasks     Task[]      @relation("AssignedTasks")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Project {
  id          String      @id @default(cuid())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime
  users       ProjectUser[]
  stories     UserStory[]
  sprints     Sprint[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model ProjectUser {
  id        String    @id @default(cuid())
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  project   Project   @relation(fields: [projectId], references: [id])
  projectId String
  role      ScrumRole
  @@unique([userId, projectId])
}

model Sprint {
  id        String      @id @default(cuid())
  name      String
  startDate DateTime
  endDate   DateTime
  project   Project     @relation(fields: [projectId], references: [id])
  projectId String
  stories   UserStory[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model UserStory {
  id          String          @id @default(cuid())
  title       String
  description String?
  priority    Int
  status      UserStoryStatus @default(TODO)
  project     Project         @relation(fields: [projectId], references: [id])
  projectId   String
  sprint      Sprint?         @relation(fields: [sprintId], references: [id])
  sprintId    String?
  tasks       Task[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model Task {
  id           String     @id @default(cuid())
  title        String
  description  String?
  status       TaskStatus @default(PENDING)
  userStory    UserStory  @relation(fields: [userStoryId], references: [id])
  userStoryId  String
  assignedTo   User?      @relation("AssignedTasks", fields: [assignedToId], references: [id])
  assignedToId String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
